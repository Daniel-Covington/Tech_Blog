<h1>Your Dashboard</h1>

<div class="jumbotron">
  <h2>Welcome to your dashboard, {{username}}!</h2>
  <p>This is where you can view and manage your posts.</p>
</div>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Your Posts</h5>

    {{#each posts}}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.content}}</p>
        <a href="/posts/{{this.id}}" class="btn btn-primary">View Post</a>
        <a href="/posts/{{this.id}}/edit" class="btn btn-secondary">Edit Post</a>
      </div>
    </div>
    {{/each}}

    <a href="/posts/new" class="btn btn-success mt-4">Create New Post</a>
  </div>
</div>